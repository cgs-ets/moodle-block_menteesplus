{{!
    @template block_menteesplus/content

    Mentees plus block content template.
}}

<div class="menteesplus {{^users.0}}on-profile{{/users.0}}" data-blocktoggle="{{blocktoggle}}" data-menteestoggle="{{menteestoggle}}">
    {{#users.0}}
        {{>block_menteesplus/mentees}}
        <div class="blocktoggle" title = "{{blocktogletitle}}">{{#blocktoggle}}<i class="fa fa-eye" aria-hidden="true"></i> {{/blocktoggle}}{{^blocktoggle}} <i class="fa fa-eye-slash" aria-hidden="true"></i> {{/blocktoggle}}</div>
        <div class="menteestoggle" title = "{{menteestoggletitle}}">{{#menteestoggle}}}<i class="fa fa-caret-down" aria-hidden="true"></i> {{/menteestoggle}}{{^menteestoggle}} <i class="fa fa-caret-right" aria-hidden="true"></i> {{/menteestoggle}}</div>
    {{/users.0}}
    {{^users.0}}
        <h4 class="profile-title">{{profiletitle}}</h4>
        {{>block_menteesplus/courses}}
    {{/users.0}}
</div>